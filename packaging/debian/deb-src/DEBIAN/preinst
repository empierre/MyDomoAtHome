#!/bin/bash
# This file was autogenerated by node-deb 0.1.6
set -e
npm config set loglevel error
case "$1" in
    install)
	npm cache clean --force
	if [ -d ~$SUDO_USER/.npm ]; then
		sudo chown -R www-data ~$SUDO_USER/.npm
	fi
	if [ -d ~/.npm ]; then
		chown -R www-data ~/.npm
	else
		mkdir ~/.npm
		chown -R www-data ~/.npm
	fi
	if [ -d /root/.npm ]; then
		sudo -u root chown -R www-data ~/.npm
	fi
        npm install -g forever
        npm install -g pm2
        ;;

    upgrade|abort-upgrade)
        #cd /usr/share/mydomoathome/app/ && npm-install-missing
	if [ -d ~$SUDO_USER/.npm ]; then
		sudo chown -R www-data ~$SUDO_USER/.npm
	fi
	if [ -d ~/.npm ]; then
		sudo chown -R www-data ~/.npm
	fi
	if [ -d /root/.npm ]; then
		sudo -u root chown -R www-data ~/.npm
	fi
        ;;
        
    configure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
        ;;
esac

#DEBHELPER#

exit 0
